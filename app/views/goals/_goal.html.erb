<div id="<%= dom_id goal %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Name:</strong>
    <%= goal.name %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Description:</strong>
    <%= goal.description %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Goal type:</strong>
    <%= goal.goal_type %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Status:</strong>
    <%= goal.status %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Target date:</strong>
    <%= goal.target_date %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Organization:</strong>
    <%= goal.organization_id %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Parent:</strong>
    <%= goal.parent_id %>
  </div>
</div>
