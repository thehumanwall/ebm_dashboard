<%= form_with(model: measurement, class: "contents") do |form| %>
  <% if measurement.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(measurement.errors.count, "error") %> prohibited this measurement from being saved:</h2>

      <ul class="list-disc ml-6">
        <% measurement.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :value %>
    <%= form.text_field :value, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": measurement.errors[:value].none?, "border-red-400 focus:outline-red-600": measurement.errors[:value].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :measurement_date %>
    <%= form.datetime_field :measurement_date, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": measurement.errors[:measurement_date].none?, "border-red-400 focus:outline-red-600": measurement.errors[:measurement_date].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :notes %>
    <%= form.textarea :notes, rows: 4, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": measurement.errors[:notes].none?, "border-red-400 focus:outline-red-600": measurement.errors[:notes].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :kvm_id %>
    <%= form.text_field :kvm_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": measurement.errors[:kvm_id].none?, "border-red-400 focus:outline-red-600": measurement.errors[:kvm_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :experiment_id %>
    <%= form.text_field :experiment_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": measurement.errors[:experiment_id].none?, "border-red-400 focus:outline-red-600": measurement.errors[:experiment_id].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
